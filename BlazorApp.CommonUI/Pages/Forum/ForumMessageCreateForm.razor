@inherits PageModels.Forum.ForumMessageCreateFormPageModel

<EditForm OnValidSubmit="CreateMessage" Model="@MessageModel" autocomplete="off">
    <div class="card-footer">
        <div class="input-group">
            @if (Creating)
            {
                <button style="width:100%;" class="btn btn-light">
                    <span class="glyphicon glyphicon-refresh glyphicon-refresh-animate"></span> Creating...
                </button>
            }
            else
            {
                <InputText id="btn btn-input" class="form-control" placeholder="Type your message here..." aria-label="Message"
                           @bind-Value="@MessageModel.Text" />
                <div class="input-group-append">
                    <button id="messageCreate" class="btn btn-warning" ref="createButton" type="submit">Send</button>
                </div>
            }
        </div>
    </div>
</EditForm>